<%- include ('../includes/head.ejs')%>
    <%- include ('../includes/navbar.ejs')%>
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card__leave">
                    <h3 class="text-success text-center">Nhật kí làm việc</h3>
                    <hr/>
                    <% if (role==='admin' ) { %>
                        <p>ID:
                            <i class="text-warning">
                                <%=staff._id%>
                            </i>
                        </p>
                        <p>Tên:
                            <i class="text-warning">
                                <%=staff.name%>
                            </i>
                        </p>
                        <%}%>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2">Ngày</th>
                                        <th colspan="2">Giờ bắt đầu</th>
                                        <th colspan="2">Giờ kết thúc</th>
                                        <th colspan="2">Nơi làm việc</th>
                                        <th colspan="2">Giờ làm thêm</th>
                                    </tr>
                                </thead>
                                <% workTimes.forEach(workTime=>{%>
                                    <tbody>
                                        <tr>
                                            <td colspan="2">
                                                <%=workTime.startTime?.getDate()%>
                                            </td>
                                            <td colspan="2">
                                                <%=workTime.startTime?.getHours()%>:
                                                    <%=workTime.startTime?.getMinutes()%>h
                                            </td>
                                            <td colspan="2">
                                                <%=workTime.endTime?.getHours()%>:
                                                    <%=workTime.endTime?.getMinutes()%>h
                                            </td>
                                            <td colspan="2">
                                                <%= workTime.workPlace==='home' ? ' Nhà' : workTime.workPlace==='company'
                                            ? ' Công ty' : ' Khách Hàng' %>
                                            </td>
                                            <td colspan="2">
                                                <% const hoursEnd=workTime.endTime?.getHours(); const
                                            hoursStart=workTime.startTime?.getHours(); const totalTimeWork=(hoursEnd* 60
                                            +workTime.endTime?.getMinutes()) - (hoursStart*60 +
                                            workTime.startTime?.getMinutes()); %>
                                                    <%= totalTimeWork/60 - 8 < 0 ? 0 : (totalTimeWork/60 - 8).toFixed(2) %>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <% } )%>
                            </table>
                            <p class="referenceStaff__article">
                                Thời gian làm gần nhất:
                                <b>
                                    <%=lastTimeWorked%> giờ
                                </b>
                            </p>
                            <p class="referenceStaff__article">Tra cứu thêm</p>
                            <div class="grid align-center">
                                <a class="" href="?rowPerPage=20">20 lần gần nhất</a>
                                <a class="" href="?rowPerPage=40">40 lần gần nhất</a>
                            </div>
                            <div class=paginate>
                                <% if (currentPage !==1 && prevPage !==1 ) {%>
                                    <a class="paginate-link" href="?page=1"> page 1</a>
                                    <%}%>
                                        <% if (hasPrevPage) {%>
                                            <a class="paginate-link" href="?page=<%=prevPage%>">
                                            prev <%=prevPage%>
                                        </a>
                                            <%}%>
                                                <a class="paginate-link paginate-link--active" href="?page=<%=currentPage%>">
                                                curr <%=currentPage%>
                                            </a>
                                                <% if (hasNextPage) {%>
                                                    <a class="paginate-link" href="?page=<%=nextPage%>">
                                                    next <%=nextPage%>
                                                </a>
                                                    <%}%>
                                                        <% if (lastPage !==currentPage && nextPage !==lastPage ) {%>
                                                            <a class="paginate-link" href="?page=<%=lastPage%>">
                                                            last <%=lastPage%>
                                                        </a>
                                                            <%}%>
                            </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="card__leave mb-5">
                    <h3 class="text-success text-center">Nghỉ phép</h3>
                    <hr/>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th colspan="3">Số Giờ</th>
                                <th colspan="3">Lý do</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <%staff.leaveInfoList.forEach(leaveInfo=> {%>
                                    <td>
                                        <%=leaveInfo.daysLeave%>
                                    </td>
                                    <td colspan="3">
                                        <%=leaveInfo.timesLeave%>
                                    </td>
                                    <td colspan="3">
                                        <%=leaveInfo.reason%>
                                    </td>
                                    <%})%>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr/>
                <div class="card__leave mt-5">
                    <h3 class="text-success text-center">Chi tiết Lương</h3>
                    <hr>
                    <form class="form-select-month" action="/staff/reference" method="POST">
                        <label for="month">Tháng</label>
                        <select class="select-month" name="month" id="month">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select>
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    </form>
                    <p class="referenceStaff__salary">
                        <%= salary < 0 ? 3000000 : salary %>
                    </p>
                </div>
            </div>
        </div>
        </div>
        <div class="blank"></div>
        <%- include ('../includes/end.ejs')%>