<%- include ('../includes/head.ejs')%>
    <%- include ('../includes/navbar.ejs')%>
        <%-include ('../includes/attendanceButton.ejs')%>
            <div class='card col-lg-4 offset-lg-4 mb-5 mt-5'>
                <div class="card-header m-3">
                    Mời bạn điền thông tin cụ thể khi bắt đầu công việc
                </div>
                <form class="" action="/attendance/start" method="POST">
                    <div class="form-control mb-3">
                        <label for="name">Full Name:</label>
                        <input disabled type="text" value="<%= staff ? staff.name : '' %>">
                    </div>
                    <div class="form-control mb-3">
                        <label for="workPlace">Place:</label>
                        <select name="workPlace" id="workPlace">
                            <option value="home">Nhà</option>
                            <option value="company">Công Ty</option>
                            <option value="customer">Khách Hàng</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <small>Bằng việc nhấn bắt đầu, hệ thống sẽ tính toán thời gian làm việc của bạn</small>
                    </div>
                    <input type="hidden" name="mode" value="start">
                    <button type="submit" class="btn-custom">Bắt đầu</button>
                </form>
            </div>
            </div>
            <%- include ('../includes/end.ejs')%>